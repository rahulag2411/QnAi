<%- include('./../partials/header') -%>

    <div class="container">
        <div class="card border-0" style="background-color: #D3D3D3">
            <div class="card-body">
                <div class="card-title text-center">
                    <a href="/discussions/<%=discussion.id%>/goback" class="btn btn-primary float-left"
                        style="padding: 2px;">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor"
                            class="bi bi-arrow-left" viewBox="0 0 16 16">
                            <path fill-rule="evenodd"
                                d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z" />
                        </svg>
                    </a>
                    <h2 class="float-center">Question</h2>

                </div>
                <div class="card my-4 shadow questionCard">
                    <div class="card-header" style="background-color: #b0e0e6">
                        <div class="d-flex align-items-center row justify-content-between">
                            <div class="col-md-6 col-sm-12">
                                <p class="card-text mr-auto mb-0" style="text-transform: uppercase;">
                                    <strong>
                                        <%=discussion.course%> - <%=discussion.topic%>
                                                <%if(discussion.comments.length==1){%>
                                                    <span class="text-success">(<%=discussion.comments.length%>
                                                            Answer)</span>

                                                    <%} else if(discussion.comments.length>1){%>
                                                        <span class="text-success">(<%=discussion.comments.length%>
                                                                Answers)</span>

                                                        <%} else {%>
                                                            <span class="text-danger">(!Unanswered)</span>
                                                            <%}%>
                                    </strong>
                                </p>
                            </div>
                            <div class="col-md-6 col-sm-12 text-md-right text-sm-left">
                                <p class="card-text ml-auto ">
                                    <small class="text-muted">
                                        <%if(discussion.anonymouslyAsked){%>
                                            Anonymously asked on <%=discussion.time1%>
                                                <%} else{%>
                                                    Posted by <%=discussion.author.username%> on <%=discussion.time1%>
                                                            <%}%>

                                    </small>
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="card-body myCardBody">
                        <h3 class="card-text">
                            <%=discussion.question%>
                        </h3>
                    </div>
                    <div class="card-footer d-flex" style="background-color: #b0e0e6">
                        <div class="mr-auto d-flex">
                            <a href="/discussions/<%=discussion.id%>/comments/new" class="btn btn-success mr-2">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                    class="bi bi-chat-left-dots" viewBox="0 0 16 16">
                                    <path
                                        d="M14 1a1 1 0 0 1 1 1v8a1 1 0 0 1-1 1H4.414A2 2 0 0 0 3 11.586l-2 2V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12.793a.5.5 0 0 0 .854.353l2.853-2.853A1 1 0 0 1 4.414 12H14a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                                    <path
                                        d="M5 6a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm4 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm4 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0z" />
                                </svg>
                                <span class="d-none d-md-inline">Comment</span>
                            </a>
                            <%if(!check){%>
                                <form action="/discussions/<%=discussion.id%>/addtobookmark" method="post">
                                    <button class="btn btn-primary" type="submit">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                            fill="currentColor" class="bi bi-bookmark-plus" viewBox="0 0 16 16">
                                            <path fill-rule="evenodd"
                                                d="M8 4a.5.5 0 0 1 .5.5V6H10a.5.5 0 0 1 0 1H8.5v1.5a.5.5 0 0 1-1 0V7H6a.5.5 0 0 1 0-1h1.5V4.5A.5.5 0 0 1 8 4z" />
                                            <path
                                                d="M2 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v13.5a.5.5 0 0 1-.777.416L8 13.101l-5.223 2.815A.5.5 0 0 1 2 15.5V2zm2-1a1 1 0 0 0-1 1v12.566l4.723-2.482a.5.5 0 0 1 .554 0L13 14.566V2a1 1 0 0 0-1-1H4z" />
                                        </svg>
                                        <span class="d-none d-md-inline">Add to bookmark</span></button>
                                </form>
                                <%}else{%>
                                    <form action="/discussions/<%=discussion.id%>/removefrombookmark" method="post">
                                        <button class="btn btn-primary" type="submit">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                                fill="currentColor" class="bi bi-bookmark-check" viewBox="0 0 16 16">
                                                <path fill-rule="evenodd"
                                                    d="M10.854 5.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 1 1 .708-.708L7.5 7.793l2.646-2.647a.5.5 0 0 1 .708 0z" />
                                                <path
                                                    d="M2 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v13.5a.5.5 0 0 1-.777.416L8 13.101l-5.223 2.815A.5.5 0 0 1 2 15.5V2zm2-1a1 1 0 0 0-1 1v12.566l4.723-2.482a.5.5 0 0 1 .554 0L13 14.566V2a1 1 0 0 0-1-1H4z" />
                                            </svg>
                                            <span class="d-none d-md-inline">Added to Bookmarks</span></button>
                                    </form>
                                    <%}%>

                        </div>
                        <%if (discussion.author.id.equals(currentUser._id)){%>
                            <div class="d-flex ml-auto">
                                <a href="/discussions/<%=discussion.id%>/edit" class="btn btn-primary mr-2">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                        class="bi bi-pen" viewBox="0 0 16 16">
                                        <path
                                            d="M13.498.795l.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001zm-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44 3.854a.5.5 0 0 0 0-.708l-1.585-1.585z" />
                                    </svg> <span class="d-none d-md-inline">Edit</span>
                                </a>
                                <form action="/discussions/<%=discussion.id%>?_method=DELETE" method="POST">
                                    <button type="submit" class="btn btn-danger">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                            fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                            <path
                                                d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                                            <path fill-rule="evenodd"
                                                d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                                        </svg> <span class="d-none d-md-inline">Delete</span>
                                    </button>
                                </form>
                            </div>
                            <%}%>
                    </div>
                </div>


                <% discussion.comments.forEach(function(comment){%>
                    <div class="card my-3 shadow">

                        <div class="card-body">
                            <p class="card-title myCardBody" style="font-size: 1.5rem; margin-bottom:0.35rem">
                                <%=comment.text%>
                            </p>

                            <div>
                                <div class="d-flex align-items-center row justify-content-between">
                                    <div class="col-md-6 col-sm-12">
                                        <p class="card-text mr-auto mb-0"
                                            style=" overflow: hidden; white-space:nowrap; text-overflow: ellipsis; font-size:0.8rem">
                                            Replied by <%=comment.author.username%>
                                        </p>
                                    </div>
                                    <div class="col-md-6 col-sm-12 text-md-right text-sm-left">
                                        <p class="card-text ml-auto ">
                                            <small class="text-muted">
                                                on <%=comment.time1%>
                                            </small>
                                        </p>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="card-footer d-flex" style="background-color: #b0e0e6">
                            <div class="mr-auto d-flex">
                                <form action="/discussions/<%=discussion.id%>/comment/<%=comment.id%>/like"
                                    method="post">
                                    <button class="btn btn-primary likeB" id="likeButton"
                                        discussionID="<%=discussion.id%>" commentID="<%=comment.id%>"
                                        type="submit">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-hand-thumbs-up" viewBox="0 0 16 16">
                                            <path d="M8.864.046C7.908-.193 7.02.53 6.956 1.466c-.072 1.051-.23 2.016-.428 2.59-.125.36-.479 1.013-1.04 1.639-.557.623-1.282 1.178-2.131 1.41C2.685 7.288 2 7.87 2 8.72v4.001c0 .845.682 1.464 1.448 1.545 1.07.114 1.564.415 2.068.723l.048.03c.272.165.578.348.97.484.397.136.861.217 1.466.217h3.5c.937 0 1.599-.477 1.934-1.064a1.86 1.86 0 0 0 .254-.912c0-.152-.023-.312-.077-.464.201-.263.38-.578.488-.901.11-.33.172-.762.004-1.149.069-.13.12-.269.159-.403.077-.27.113-.568.113-.857 0-.288-.036-.585-.113-.856a2.144 2.144 0 0 0-.138-.362 1.9 1.9 0 0 0 .234-1.734c-.206-.592-.682-1.1-1.2-1.272-.847-.282-1.803-.276-2.516-.211a9.84 9.84 0 0 0-.443.05 9.365 9.365 0 0 0-.062-4.509A1.38 1.38 0 0 0 9.125.111L8.864.046zM11.5 14.721H8c-.51 0-.863-.069-1.14-.164-.281-.097-.506-.228-.776-.393l-.04-.024c-.555-.339-1.198-.731-2.49-.868-.333-.036-.554-.29-.554-.55V8.72c0-.254.226-.543.62-.65 1.095-.3 1.977-.996 2.614-1.708.635-.71 1.064-1.475 1.238-1.978.243-.7.407-1.768.482-2.85.025-.362.36-.594.667-.518l.262.066c.16.04.258.143.288.255a8.34 8.34 0 0 1-.145 4.725.5.5 0 0 0 .595.644l.003-.001.014-.003.058-.014a8.908 8.908 0 0 1 1.036-.157c.663-.06 1.457-.054 2.11.164.175.058.45.3.57.65.107.308.087.67-.266 1.022l-.353.353.353.354c.043.043.105.141.154.315.048.167.075.37.075.581 0 .212-.027.414-.075.582-.05.174-.111.272-.154.315l-.353.353.353.354c.047.047.109.177.005.488a2.224 2.224 0 0 1-.505.805l-.353.353.353.354c.006.005.041.05.041.17a.866.866 0 0 1-.121.416c-.165.288-.503.56-1.066.56z"/>
                                          </svg>
                                          <span class="d-none d-md-inline">Liked by <%=comment.likedby.length%></span>
                                    </button>

                                </form>
                            </div>

                            <%if (comment.author.id.equals(currentUser._id)){%>
                                <div class="d-flex ml-auto">

                                    <a href="/discussions/<%=discussion.id%>/comments/<%=comment.id%>/edit"
                                        class="btn btn-primary mr-2">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                            fill="currentColor" class="bi bi-pen" viewBox="0 0 16 16">
                                            <path
                                                d="M13.498.795l.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001zm-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44 3.854a.5.5 0 0 0 0-.708l-1.585-1.585z" />
                                        </svg> <span class="d-none d-md-inline">Edit</span>
                                    </a>
                                    <form
                                        action="/discussions/<%=discussion.id%>/comments/<%=comment.id%>?_method=DELETE"
                                        method="POST">
                                        <button type="submit" class="btn btn-danger">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                                fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                                <path
                                                    d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                                                <path fill-rule="evenodd"
                                                    d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                                            </svg> <span class="d-none d-md-inline">Delete</span>
                                        </button>
                                    </form>
                                </div>

                                <%}%>
                        </div>

                    </div>


                    <%}); %>


            </div>
        </div>
    </div>



    <%- include('./../partials/footer') -%>